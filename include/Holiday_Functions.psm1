[string[]]$daysOfWeek = new-object globalization.datetimeformatinfo | select -expand DayNames

function Get-StaticHoliday {
    param(
        [parameter(Mandatory=$true)][ValidateRange(1,12)][int]$month,
        [parameter(Mandatory=$true)][ValidateRange(1,31)][string]$day, 
        [parameter(Mandatory=$false)][ValidateRange(1900,3000)][int]$year = (Get-Date).Year
    )
    $date = Get-Date ('{0}/{1}/{2}' -f $month, $day, $year)
    switch ($date.DayOfWeek) {
        'Saturday'    {return $date.AddDays(-1)}
        'Sunday'      {return $date.AddDays(1)}
        default       {return $date}
    }
}


function Get-DynamicHoliday {
    param(
        [parameter(Mandatory=$true)][ValidateRange(1,12)][int]$month,
        [parameter(Mandatory=$true)][ValidateScript({$daysOfWeek -contains $_})][string]$day, 
        [parameter(Mandatory=$false)][ValidateRange(1900,3000)][int]$year = (Get-Date).Year,
        [parameter(Mandatory=$true)][int]$index
    )
    #must account for 0-based indexing in arrays
    if ($index -gt 0) {$index--}
    #get all days of the given month
    $allDays = 1..([Datetime]::DaysInMonth($year, $month)) | foreach-object {Get-Date -Month $month -Day $_ -year $year}
    #filter only those days that are the day of the week that we want
    $days = $allDays | where {$_.DayOfWeek -eq $day}
    #pull out and return the indexed day of the month
    return $days[$index].Date
}


[Datetime[]]$staticHolidays = @(
    (Get-StaticHoliday -month 1 -day 1),   # New Year's Day
    (Get-StaticHoliday -month 7 -day 4),   # Independence Day
    (Get-StaticHoliday -month 11 -day 11), # Veteran's Day
    (Get-StaticHoliday -month 12 -day 25)  # Christmas Day    
)
    
[Datetime[]]$dynamicHolidays = @(
    (Get-DynamicHoliday -month 1 -day Monday -index 3),   # Dr. Martin Luther King, Jr. Day
    (Get-DynamicHoliday -month 5 -day Monday -index -1),  # Memorial Day
    (Get-DynamicHoliday -month 9 -day Monday -index 1),   # Labor Day
    (Get-DynamicHoliday -month 11 -day Thursday -index 4) # Thanksgiving Day    
)
    
$holidays = $staticHolidays + $dynamicHolidays | sort

function Test-Holiday {
    <#
    .Synopsis
        Returns $true if the date supplied is a university holiday, otherwise $false.
    .Example 1
        PS C:\> Test-Holiday
        False
    Tests if the current date is a holiday.
    .Example 2
        PS C:\> Get-Date 07/04/2011 | Test-Holiday
        True
    You can pass a DateTime object via the pipeline to test a specific date as well.
    #>
    param(
        [parameter(ValueFromPipeline=$true)][Datetime]$date = (Get-Date)
    )
    process {
        return ($holidays -contains $date.Date)
    }
}
   
    
